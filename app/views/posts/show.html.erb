<p id="notice"><%= notice %></p>

<p>
  <strong>Activity:</strong>
  <%= @post.activity %>
</p>

<p>
  <strong>Location:</strong>
  <%= @post.location %>
</p>

<p>
  <strong>Time:</strong>
  <%= @post.time.strftime("%H:%M") %>
</p>

<p>
  <strong>Day:</strong>
  <%= @post.day %>
</p>

<p><%=image_tag @user.image.url(:thumb)%></p>

<p>
  <strong>GymPal Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%=@user.name%>'s Gender:</strong>
  <% if @user.gender == 0  %>
    Male
  <% else %>
    Female
  <% end %>
</p>

<p>
  <strong><%=@user.name%>'s Fitness Level:</strong>
  <% if @user.fitness_level == 0%>
    Beginner
  <% elsif @user.fitness_level == 1 %>
    Intermediate
  <% else %>
    Advanced
  <% end %>
</p>

<p>
  <strong><%=@user.name%>'s Fitness Bio:</strong>
  <%= @user.fitness_bio %>
</p>

<div>
  <%= mail_to @user.email, 'Send Message' %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
