<h1>Buddy Requests</h1>
<h2>Make a <%= link_to 'New Post', new_post_path %></h2>

<table>
  <thead>
    <tr>
      <th>
        <button class='btn btn-default' id='gender'>Gender</button>
      </th>
      <th>
        <div id='post_gender'></div>
      </th>
      <th>
        <select id="fitness_level" class='btn btn-default'>
          <option>Select a fitness level</option>
          <option>Beginner</option>
          <option>Intermidate</option>
          <option>Advanced</option>
        </select>
      </th>
      <th>
        <select id="gym" class='btn btn-default'>
          <option>Select a gym</option>
          <option>Virgin Active</option>
          <option>Fitness Freaks</option>
        </select>
      </th>
    </tr>
  </thead>
</table>

<table>
  <thead>
  </thead>
  <tbody>
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <tr class=<% if User.find(post.user_id).gender == 0%> 
          'Male
        <% else %>
          'Female
        <% end %>
        <% if User.find(post.user_id).fitness_level == 0%>
          Beginner
        <% elsif User.find(post.user_id).fitness_level == 1 %>
          Intermidate
        <% else %>
          Advanced
        <% end %>
        <% if post.location == 'Virgin Active Molegate' %>
          Active'
        <% else %>
          Fitness'
        <% end %>
        '>
        <td><p><%=image_tag User.find(post.user_id).image.url(:thumb)%></p></td>

        <td>I am looking for a Gym Buddy at <strong><%= post.location %></strong>
            I want to do <strong><%= post.activity %></strong> on <strong><%= post.day %></strong>
            at <strong><%= post.time.strftime("%H:%M") %></strong></td>

        <% if current_user %>
        <td><%= link_to 'Show', post %></td>
          <% if post.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
        </tr>
      </ul>
    <% end %>
  <% else %>
    <p>No posts yet</p>
  <% end %>
  </tbody>
</table>
<br>
