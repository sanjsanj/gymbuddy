<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Location</th>
      <th>Time</th>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @posts.any? %> 
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.activity %></td>
        <td><%= post.location %></td>
        <td><%= post.time %></td>
        <td><%= post.day %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <p>No posts yet</p>
  <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Post', new_post_path %>
