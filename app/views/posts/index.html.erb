<p id="notice"><%= notice %></p>

<h1>Buddy Requests</h1>

<table>
  <thead>
  </thead>
  <tbody>
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <tr>
        <td><p><%=image_tag User.find(post.user_id).image.url(:thumb)%></p></td>
        <td><%= post.activity %></td>
        <td><%= post.location %></td>
        <td><%= post.try(:time).try(:strftime, "%H:%M") %></td>
        <td><%= post.try(:day).try(:strftime, "%A %B %-d") %></td>

        <% if current_user %>
        <td><%= link_to 'Show', post %></td>
          <% if post.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        <% end %>

        </td>
      </tr>
    <% end %>
  <% else %>
    <p>No posts yet</p>
  <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Post', new_post_path %>
